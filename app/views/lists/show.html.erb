<h1><%= @list.name %></h1>
<br>
<%= link_to "Add Movie", new_list_bookmark_path(@list), class: "btn btn-gradient" %>
<br>
<br>
<br>
    <% @list.bookmarks.each do |bm| %>
    <ul>
      <div class="card-product" style="width: 20rem;">
        <%= image_tag "#{bm.movie.poster_url}" %>
        <div class="card-body">
          <li><h2 class="card-product-infos"><%= bm.movie.title %></h2>
          <br>
          <p class="card-text"><%= bm.movie.overview %></p>
          <p class="card-text"><em><%= bm.comment %></em></p>
          <%= link_to "Delete" '<i class="fa-solid fa-trash"></i>'.html_safe, bookmark_path(bm), data: {turbo_method: :delete}, class:"btn btn-danger" %>
          </li>
            <br>
          </div>
        </div>
      </div>
    </ul>
    <% end %>
<br>
<%= link_to "Back", lists_path, class: "btn btn-gradient" %>
